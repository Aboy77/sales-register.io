<body class="body-app">
    
</body>
<header class="flex flex-dir-col flex-j-c-space-b">
    <div class="container">
        <div class="flex flex-j-c-space-b flex-a-i-center">
            <h1>Myblin</h1>
            <nav>
                <a href="/">Home</a>
                <a href="/add/register">Add new</a>
            </nav>
        </div>
    </div>
</header>
<div class="flex flex-dir-col flex-j-c-center flex-a-i-center full-height">

    {{#each error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/each}}

    <form action="/add/new" method="POST" class="form">
        <div class="space-fields flex flex-j-c-space-b flex-a-i-center">
            <label for="product">Producto: </label>
            <input type="text" placeholder="Producto" id="product" name="product">
        </div>
        <div class="space-fields flex flex-j-c-space-b flex-a-i-center">
            <label for="quantity">Email: </label>
            <input type="number" placeholder="correo@correo.com" id="quantity" name="quantity">
        </div>
        <div class="space-fields flex flex-j-c-space-b flex-a-i-center">
            <label for="total">Total: </label>
            <input type="number" placeholder="$" id="total" name="total">
        </div>
        <div class="flex flex-j-c-center">
            <input type="submit" class="btn-secondary" value="Registrar">
        </div>
    </form>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>